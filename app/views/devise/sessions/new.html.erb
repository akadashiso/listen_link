
<%= form_with model: @user, url: user_session_path, local: true do |f| %>


  <div id="full-layer-login">
    <div id="devise-wrap" class="container text-white bg-dark">
      <div class="row login-title pt-3">
        <div class="col-md-4 offset-md-4">
          <div class="row justify-content-center">
              <div class="field">
                <h3>ログイン</h3>
              </div>
          </div>
        </div>
      </div>
      <div class="row login-name">
        <div class="col-md-4 offset-md-4">
          <div class="row justify-content-center">
            <div class="field row justify-content-center">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "example@example.com" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row login-password pt-2">
        <div class="col-md-4 offset-md-4">
          <div class="row justify-content-center">
            <div class="field row justify-content-center">
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, size: 40, autocomplete: "パスワード" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row login-remember-me pt-2">
        <div class="col-md-4 offset-md-4">
          <div class="row justify-content-center">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
      <div class="row login-submit pt-2">
        <div class="col-md-4 offset-md-4">
          <div class="row justify-content-center">
            <div class="actions">
              <%= f.submit "ログイン", class: 'mt-3 btn btn-lg btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
      <footer class="row justify-content-center mt-3 text-white-50">
        <p>Copyright &copy; 2021 Shinnosuke Akashi</p>
      </footer>
    </div>
  </div>
<% end %>
