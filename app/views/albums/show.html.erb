<input type="hidden" id="bg-image" value="<%= @album.image_url %>">
<input type="hidden" id="url-itunes" value="<%= @album.itunes_url %>">
<input type="hidden" id="url-youtube" value="<%= @album.youtube_url %>">
<input type="hidden" id="url-soundcloud" value="<%= @album.soundcloud_url %>">

  <div id="full-layer-image">
    <div class="container text-white">
      <div class="row music-image">
        <div class="col-md-4 offset-md-4 bg-dark">
          <div class="row justify-content-center">
            <img class="link-image" width="350" height="350" src="<%= @album.image_url %>" alt="">
          </div>
        </div>
      </div>
      <div class="row link-header-track">
        <div class="col-md-4 offset-md-4 pt-2 bg-dark">
          <div class="row justify-content-center text-center text-break">
            <h3 class="col-12"><%= @album.album_name %></h3>
            <h5 class="col-12 text-white-50"><%= @album.artist_name %></h5>
          </div>
        </div>
      </div>
      <div class="row link-player-wrap">
        <div class="col-md-4 offset-md-4 bg-dark">
          <div class="row justify-content-center">
            <iframe id="embed" class="mt-3"
              src="https://open.spotify.com/embed/album/<%= @album.album_id %>"
              width="400" height="200" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
          </div>
        </div>
      </div>
      <div class="row link-wrap">
        <div class="col-md-4 offset-md-4 bg-dark">
          <div class="row spotify-link-options border-bottom border-secondary">
            <%= link_to (@album.spotify_url), class: 'col' do %>
            <div class="col col-lg-12 col-sm-12 link-option-row">
              <div class="row align-items-center">
                <div class="col col-lg-9 col-sm-9 col-med-9 link-option-row-logo">
                   <img class="link-image" width="120" height="30" src="/assets/spotify.png" alt="">
                </div>
                <div class="ccl col-lg-3 col-sm-3 col-med-3 link-option-row-play">
                  <p class="pt-2">Play</p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <div class="row itunes-link-options border-bottom border-secondary">
            <%= link_to (@album.itunes_url), class: 'col' do %>
            <div class="col col-lg-12 col-sm-12 link-option-row">
              <div class="row align-items-center">
                <div class="col col-lg-9 col-sm-9 col-med-9 link-option-row-logo">
                  <img class="link-image" width="120" height="30" src="/assets/apple_music.png" alt="">
                </div>
                <div class="ccl col-lg-3 col-sm-3 col-med-3 link-option-row-play">
                  <p class="pt-2">Play</p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <div class="row youtube-link-options border-bottom border-secondary">
            <%= link_to (@album.youtube_url), class: 'col' do %>
            <div class="col col-lg-12 col-sm-12 link-option-row">
              <div class="row align-items-center">
                <div class="col col-lg-9 col-sm-9 col-med-9 link-option-row-logo">
                  <img class="link-image" width="120" height="30" src="/assets/youtube.png" alt="">
                </div>
                <div class="ccl col-lg-3 col-sm-3 col-med-3 link-option-row-play">
                  <p class="pt-2">Play</p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <div class="row soundcloud-link-options">
            <%= link_to (@album.soundcloud_url), class: 'col' do %>
            <div class="col col-lg-12 col-sm-12 link-option-row">
              <div class="row align-items-center">
                <div class="col col-lg-9 col-sm-9 col-med-9 link-option-row-logo">
                  <img class="link-image" width="120" height="30" src="/assets/soundcloud.png" alt="">
                </div>
                <div class="ccl col-lg-3 col-sm-3 col-med-3 link-option-row-play">
                  <p class="pt-2">Play</p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <footer class="row justify-content-center mt-3 text-white-50">
        <p>Copyright &copy; 2021 Shinnosuke Akashi</p>
      </footer>
    </div>
  </div>
